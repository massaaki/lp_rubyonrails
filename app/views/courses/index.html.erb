
<div id="courses">

  <div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Cursos</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>

          <td>
            <%= link_to course do %>
              <%= course.name %>
          <%end%>
          <td><%=h truncate(course.description, :length => 140) %></td>
          
          </td>

          <%if current_user.admin %>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Course', new_course_path %>


  </div> <!-- End-Container-->

</div> <!-- End-Courses -->