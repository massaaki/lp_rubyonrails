<div id="session">
	<div class="container">
	<div class="row">


	<div class="col-md-4 col-md-offset-4 well">
	<h2 class="text-center">Acessar a plataforma</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
		  <div class="form-group">
		    <%= f.text_field :email, required: true, autofocus: true, placeholder: 'E-mail', class: 'form-control' %>
		  </div>
		  <div class="form-group">
		    <%= f.password_field :password, required: true, placeholder: 'Senha', class: 'form-control' , hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
		  </div>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Entrar", class: 'btn btn-success btn-block' %>
	  </div>
	<% end %>

	<br>
	<p class="text-center"> <%= link_to "Ainda nÃ£o tem uma conta?", new_registration_path(resource_name) %></p>
	<p class="text-center"><%#= link_to "Forgot your password?", new_password_path(resource_name) %></p>

	</div>

	</div> <!-- row -->
	</div> <!-- container -->
</div> <!-- Session-->